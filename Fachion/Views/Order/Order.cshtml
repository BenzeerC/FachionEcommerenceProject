@model Fachion.Models.Order

<h1 class="text-center">Create Order</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create" method="post" class="form">
            <div class="form-group">
                <label asp-for="CustomerID">Customer ID</label>
                <input asp-for="CustomerID" class="form-control" />
                <span asp-validation-for="CustomerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderDate">Order Date</label>
                <input asp-for="OrderDate" class="form-control" />
                <span asp-validation-for="OrderDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalAmount">Total Amount</label>
                <input asp-for="TotalAmount" class="form-control" />
                <span asp-validation-for="TotalAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderStatus">Order Status</label>
                <input asp-for="OrderStatus" class="form-control" />
                <span asp-validation-for="OrderStatus" class="text-danger"></span>
            </div>
            <!-- Add more form fields for other properties -->

            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary">Create Order</button>
            </div>
        </form>
    </div>
</div>
